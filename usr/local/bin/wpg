#!/bin/bash
#
# Evaluate command on all WordPress sites
#

if [ -z $1 ]
then
  echo 'Usage: wpg "<cmd(s)>"'
  exit 1
else
  for path in $(cat /usr/local/sitelist.md)
  do
    if [ -e $path/wp-config.php ]
    then
      cd $path/html
      site=$(basename $path)
      echo $site
      wp $*
      echo
    fi
  done
fi


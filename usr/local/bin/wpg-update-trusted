#!/bin/bash
#
# Update trusted plugins and themes on all WordPress websites
#

for path in $(cat /usr/local/sitelist.md)
do
  if test -e $path/wp-config.php; then
    cd $path/html
    site=$(basename $path)
    echo $site

    # Update WordPress
    wp core update
    wp core update-db

    # Update trusted plugins
    wp plugin update akismet jetpack vaultpress wp-super-cache

    # Update trusted themes
    wp theme update twentyseventeen twentysixteen
    
    echo
  fi
done

